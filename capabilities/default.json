{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-read-dir",
    "fs:allow-remove",
    "fs:allow-rename",
    "dialog:default",
    "opener:default",
    {
      "identifier": "fs:scope",
      "allow": ["$HOME/**", "C:\\**", "D:\\**", "**"]
    }
  ]
}